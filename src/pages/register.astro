---
/**
 * Register Page
 * Public page for user registration
 * Accessible at /register
 */

import Layout from "@/layouts/Layout.astro";
import { RegisterForm } from "@/components/forms/RegisterForm";

// Disable prerendering for this page
export const prerender = false;

// If user is already logged in, redirect to home page
if (Astro.locals.user) {
  return Astro.redirect("/");
}
---

<Layout title="Rejestracja - VacationPlanner" showNavigation={false}>
  <div class="min-h-screen flex items-center justify-center bg-muted/50 p-4">
    <div class="w-full max-w-md">
      <div class="mb-8 text-center">
        <h1 class="text-3xl font-bold mb-2">VacationPlanner</h1>
        <p class="text-muted-foreground">System zarzÄ…dzania urlopami</p>
      </div>
      <RegisterForm client:load />
    </div>
  </div>
</Layout>
