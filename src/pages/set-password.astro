---
/**
 * Set Password Page
 * Public page for setting/resetting password
 * Accessible at /set-password
 * Accepts token as hash fragment (#access_token=...) or query parameter (?token=...)
 */

import Layout from "@/layouts/Layout.astro";
import { SetPasswordForm } from "@/components/forms/SetPasswordForm";

// Disable prerendering for this page
export const prerender = false;

// Note: Token will be extracted from hash fragment on client-side
// This is required for PKCE flow used by Supabase
---

<Layout title="Ustaw hasło - VacationPlanner" showNavigation={false}>
  <div class="min-h-screen flex items-center justify-center bg-muted/50 p-4">
    <div class="w-full max-w-md">
      <div class="mb-8 text-center">
        <h1 class="text-3xl font-bold mb-2">VacationPlanner</h1>
        <p class="text-muted-foreground">System zarządzania urlopami</p>
      </div>
      <SetPasswordForm client:load />
    </div>
  </div>
</Layout>
