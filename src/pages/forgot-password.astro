---
/**
 * Forgot Password Page
 * Public page for requesting password reset
 * Accessible at /forgot-password
 */

import Layout from "@/layouts/Layout.astro";
import { ForgotPasswordForm } from "@/components/forms/ForgotPasswordForm";

// Disable prerendering for this page
export const prerender = false;
---

<Layout title="Resetowanie hasła - VacationPlanner" showNavigation={false}>
  <div class="min-h-screen flex items-center justify-center bg-muted/50 p-4">
    <div class="w-full max-w-md">
      <div class="mb-8 text-center">
        <h1 class="text-3xl font-bold mb-2">VacationPlanner</h1>
        <p class="text-muted-foreground">System zarządzania urlopami</p>
      </div>
      <ForgotPasswordForm client:load />
    </div>
  </div>
</Layout>
